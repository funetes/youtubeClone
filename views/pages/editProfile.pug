extends ../layout/main.pug

block content
  .form-container
    form(action=`/users${routes.editProfile}`, method="post",enctype="multipart/form-data")
      label(for="avatar") Avatar
      input(type="file", name="avatar", placeholder="avatar",accept="image/*")
      input(type="text", name="name", placeholder="name",value=userFromMiddleware.name)
      input(type="submit", value="Update Profile")
    a.form-container__link(href=`/users${routes.changePassword}`) Change Password
    